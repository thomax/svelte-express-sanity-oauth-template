{
	"useTabs": true,
	"singleQuote": true,
	"semi": false,
	"printWidth": 100,
	"tabWidth": 2,
	"trailingComma": "es5",
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"htmlWhitespaceSensitivity": "ignore",
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
      "files": "*.ts",
      "options": {
        "parser": "typescript"
      }
    }
	]
}
